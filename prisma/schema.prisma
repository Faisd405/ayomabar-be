generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  name     String
  email    String   @unique
  username String   @unique
  password String?
  roles    String[] @default(["user"])

  avatar    String?
  bio       String?
  location  String?
  playstyle String? @default("casual")
  socials   Json?

  notes       Note[]
  Room        Room[]
  RoomRequest RoomRequest[]

  @@map("users")
}

model Note {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  userId  Int
  content String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("notes")
}

model Game {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  title       String
  genre       String?
  platform    String?
  releaseDate DateTime?
  Room        Room[]
  Rank        Rank[]

  @@map("games")
}

model Rank {
  id         Int      @id @default(autoincrement())
  gameId     Int
  name       String
  tier       Int? // optional sub-rank, e.g. I, II, III
  orderIndex Int // rank order lowest â†’ highest
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  game Game @relation(fields: [gameId], references: [id], onDelete: Cascade)

  @@unique([gameId, name, tier]) // avoid duplicate rank tier per game
  @@index([gameId])
}

model Room {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  gameId      Int
  userId      Int // The user who created the room
  minPlayers  Int       @default(1)
  maxPlayers  Int       @default(1) // Need Player
  rankMin     Int?
  rankMax     Int?
  typePlay    String    @default("casual") // casual, competitive, custom, tournament
  roomType    String    @default("public") // public, private (invite-only), private (host select), private (first come first served)
  status      String    @default("open") // open, closed, in-progress, completed
  scheduledAt DateTime?

  game        Game          @relation(fields: [gameId], references: [id], onDelete: Cascade)
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  RoomRequest RoomRequest[]

  @@map("rooms")
}

model RoomRequest {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  roomId Int
  userId Int // The user who requested to join the room
  status String  @default("pending") // pending, accepted, rejected
  isHost Boolean @default(false)

  room Room @relation(fields: [roomId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("room_requests")
}
