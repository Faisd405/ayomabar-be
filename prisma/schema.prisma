generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  name     String
  email    String   @unique
  username String   @unique
  password String?
  roles    String[] @default(["user"])

  avatar    String?
  bio       String?
  location  String?
  playstyle String? @default("casual")
  socials   Json?

  notes       Note[]
  rooms       Room[]
  roomRequest RoomRequest[]
  socialites  UserSocialite[]

  @@map("users")
}

model UserSocialite {
  id             Int      @id @default(autoincrement())
  user_id        Int
  socialite_name String
  socialite_id   String
  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@unique([socialite_name, socialite_id])
  @@map("user_socialites")
}

model Note {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  userId  Int
  content String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("notes")
}

model Game {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  title       String
  genre       String?
  platform    String?
  releaseDate DateTime?

  rooms Room[]
  ranks Rank[]

  @@map("games")
}

model Rank {
  id         Int      @id @default(autoincrement())
  gameId     Int
  name       String
  tier       Int?
  orderIndex Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  game Game @relation(fields: [gameId], references: [id], onDelete: Cascade)

  roomsAsMin Room[] @relation("RankMin")
  roomsAsMax Room[] @relation("RankMax")

  @@unique([gameId, name, tier])
  @@index([gameId])
  @@map("ranks")
}

model Room {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  gameId  Int
  userId  Int
  minSlot Int @default(1)
  maxSlot Int @default(1)

  rankMinId Int?
  rankMaxId Int?

  typePlay String? @default("casual")
  roomType String? @default("public")
  status   String? @default("open")

  roomCode         String?
  scheduledAt      DateTime?
  discordMessageId String?
  discordChannelId String?

  game Game @relation(fields: [gameId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  rankMin Rank? @relation("RankMin", fields: [rankMinId], references: [id])
  rankMax Rank? @relation("RankMax", fields: [rankMaxId], references: [id])

  roomRequests RoomRequest[]

  @@map("rooms")
}

model RoomRequest {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  roomId Int
  userId Int
  status String  @default("pending")
  isHost Boolean @default(false)

  room Room @relation(fields: [roomId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("room_requests")
}
