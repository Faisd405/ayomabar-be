generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  name     String
  email    String   @unique
  username String   @unique
  password String?
  roles    String[] @default(["user"])

  avatar    String?
  bio       String?
  location  String?
  playstyle String? @default("casual")
  socials   Json?

  notes        Note[]
  Match        Match[]
  MatchRequest MatchRequest[]

  @@map("users")
}

model Note {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  userId  Int
  content String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("notes")
}

model Game {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  title       String
  genre       String?
  platform    String?
  releaseDate DateTime?
  Match       Match[]

  @@map("games")
}

model Rank {
  id          Int      @id @default(autoincrement())
  gameId      Int
  name        String
  tier        Int?     // optional sub-rank, e.g. I, II, III
  orderIndex  Int      // rank order lowest â†’ highest
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  game Game @relation(fields: [gameId], references: [id])

  @@index([gameId])
  @@unique([gameId, name, tier]) // avoid duplicate rank tier per game
}

model Match {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  gameId      Int
  userId      Int /// The user who created the match
  maxPlayers  Int       @default(1)
  // e.g., public, private (invite-only), private (host select), private (first come first served)
  type        String    @default("public") 
  // e.g., open, closed, in-progress, completed
  status      String    @default("open") 
  scheduledAt DateTime?

  game         Game           @relation(fields: [gameId], references: [id], onDelete: Cascade)
  user         User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  MatchRequest MatchRequest[]

  @@map("matches")
}

model MatchRequest {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  matchId Int
  /// The user who requested to join the match
  userId  Int
  status  String  @default("pending") // e.g., pending, accepted, rejected
  isHost  Boolean @default(false)

  match Match @relation(fields: [matchId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("match_requests")
}
